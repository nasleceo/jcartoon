<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="150dp"
    android:layout_height="wrap_content"
    android:layout_marginStart="6dp"
    android:layout_marginTop="6dp"
    android:clickable="true"
    android:layoutDirection="ltr"
    android:orientation="vertical"
    android:outlineProvider="background"
    android:focusable="true"
    android:foreground="?attr/selectableItemBackgroundBorderless">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background">


        <ImageView
            android:id="@+id/imageprev"
            android:layout_width="0dp"
            android:layout_height="280dp"
            android:scaleType="centerCrop"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/imageVie3"
            android:layout_width="match_parent"
            android:layout_height="116dp"
            android:scaleType="centerCrop"
            android:src="@drawable/down"
            app:layout_constraintBottom_toBottomOf="@+id/imageprev"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintVertical_bias="1.0" />


        <TextView
            android:id="@+id/season_name"
            android:layout_width="108dp"
            android:layout_height="0dp"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_gravity="center"
            android:layout_marginBottom="10dp"
            android:fontFamily="@font/poppins_bold"
            android:gravity="center"
            android:padding="3dp"
            android:text="Justice League"
            android:textColor="#FFFFFF"
            android:textSize="10dp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/imageprev"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:visibility="gone"
            android:id="@+id/tasnif"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/btnflwolbg"
            android:backgroundTint="#232325"
            android:fontFamily="@font/poppins_bold"
            android:gravity="center"
            android:paddingStart="5dp"
            android:paddingEnd="5dp"
            android:text=""
            android:textColor="@color/white"
            android:textSize="8dp"
            android:layout_marginTop="3dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />



    </androidx.constraintlayout.widget.ConstraintLayout>





</LinearLayout>

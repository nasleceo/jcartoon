                                    android:layout_weight="1"
                                    android:id="@+id/watchepenoew"
                                    android:layout_width="wrap_content"
                                    android:layout_height="40dp"
                                    android:backgroundTint="#fffefe"
                                    android:background="@drawable/btnflwolbg"
                                    android:foreground="@drawable/click_animation_round">


                                    <LinearLayout
                                        android:gravity="center"
                                        android:layout_centerInParent="true"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content">

                                        <ImageView
                                            android:layout_centerVertical="true"
                                            android:layout_width="18dp"
                                            android:layout_height="12dp"
                                            app:tint="@color/black"
                                            android:src="@drawable/play" />
                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:fontFamily="@font/arabic_kufi"
                                            android:text="شاهد"
                                            android:layout_centerVertical="true"
                                            android:layout_marginStart="5dp"
                                            android:textColor="@color/black"
                                            android:textStyle="bold"
                                            android:textSize="12dp" />


                                    </LinearLayout>

                                </RelativeLayout>
                                <View
                                    android:layout_width="10dp"
                                    android:layout_height="0dp"/>


                                <RelativeLayout
                                    android:layout_weight="1"
                                    android:id="@+id/addtomylist"
                                    android:layout_width="wrap_content"
                                    android:layout_height="40dp"
                                    android:backgroundTint="@color/bg4"
                                    android:background="@drawable/btnflwolbg"
                                    android:foreground="@drawable/click_animation_round"
                                    >

                                    <LinearLayout
                                        android:gravity="center"
                                        android:layout_centerInParent="true"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content">
                                        <ImageView
                                            android:id="@+id/addtofv"
                                            android:layout_centerVertical="true"
                                            android:layout_width="15dp"
                                            android:layout_height="15dp"
                                            app:tint="@color/white"
                                            android:src="@drawable/ic_add" />

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:fontFamily="@font/arabic_kufi"
                                            android:text="المفضلة"
                                            android:layout_centerVertical="true"
                                            android:layout_marginStart="5dp"
                                            android:textColor="@color/white"
                                            android:textStyle="bold"
                                            android:textSize="12dp" />


                                    </LinearLayout>

                                </RelativeLayout>





                            </LinearLayout>

                        </LinearLayout>


                    </androidx.constraintlayout.widget.ConstraintLayout>




                </com.google.android.material.card.MaterialCardView>


            </LinearLayout>

            <LinearLayout

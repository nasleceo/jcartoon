                    app:cardElevation="20dp"
                    android:theme="@style/Theme.MaterialComponents.DayNight.NoActionBar"
                    app:strokeColor="#D0FFFFFF"
                    app:strokeWidth="0.5dp"
                    android:layout_width="match_parent"
                    android:layout_height="500dp">


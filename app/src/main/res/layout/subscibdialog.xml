<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/transparent"
    android:layout_width="fill_parent"
    android:layoutDirection="ltr"
    android:layout_height="fill_parent">

    <com.google.android.material.card.MaterialCardView
        android:layout_marginStart="10sp"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="10sp"
        android:layout_marginBottom="14sp"
        app:cardCornerRadius="8sp"
        app:cardElevation="20dp"
        android:theme="@style/Theme.MaterialComponents.DayNight.NoActionBar"
        app:strokeColor="@color/white"
        app:strokeWidth="1.4dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/bggg"
            android:background="@drawable/gradient_pages"
            android:visibility="visible"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">



            <RadioGroup
                android:layout_marginTop="10dp"
                android:layout_marginEnd="5dp"
                android:layout_marginStart="5dp"
                android:layout_weight="1"
                android:layoutDirection="rtl"
                android:id="@+id/grouiprado"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RadioButton
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    android:id="@+id/manxorat_select"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="باك 1 : 1 دولار ازالت الاعلانات في التطبيق"
                    android:gravity="center"
                    android:textColor="@drawable/radio_text_selected"
                    android:checked="true"
                    android:button="@color/transparent"
                    android:background="@drawable/radio_btn_left_selec"
                    android:textAppearance="@style/tabtext"
                    />
                <RadioButton
                    android:layout_weight="1"
                    android:layout_margin="5dp"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    android:id="@+id/nadariat_select"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@drawable/radio_text_selected"
                    android:text="2.99$ الاول + توثيق حسابه بالعلامة السوداء +  فتح 10 غرف في اليوم وزيادة العدد الي 100 شخص"
                    android:gravity="center"
                    android:button="@color/transparent"
                    android:background="@drawable/radio_btn_left_selec"
                    android:textAppearance="@style/tabtext"
                    />
                <RadioButton
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    android:id="@+id/mowajaha_select"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@drawable/radio_text_selected"
                    android:text="ماسبق + تحميل جميع الحلقات بزر واحد"
                    android:gravity="center"
                    android:button="@color/transparent"
                    android:background="@drawable/radio_btn_left_selec"
                    android:textAppearance="@style/tabtext"
                    />

            </RadioGroup>


            <LinearLayout
                android:id="@+id/addtofav_btn"
                android:layout_marginBottom="10dp"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginStart="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">



                <RelativeLayout
                    android:layout_weight="1"
                    android:id="@+id/addtomylist"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:backgroundTint="@color/white"
                    android:background="@drawable/btnflwolbg"
                    android:foreground="@drawable/click_animation_round"
                    >

                    <LinearLayout
                        android:gravity="center"
                        android:layout_centerInParent="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:id="@+id/addtofv"
                            android:layout_centerVertical="true"
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            app:tint="@color/black"
                            android:src="@drawable/ic_arrow_back" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/arabic_kufi"
                            android:text="التالي"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="5dp"
                            android:textColor="@color/black"
                            android:textStyle="bold"
                            android:textSize="12dp" />


                    </LinearLayout>

                </RelativeLayout>





            </LinearLayout>


        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>



</RelativeLayout>

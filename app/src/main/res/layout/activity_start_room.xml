<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:layoutDirection="ltr"
    android:fillViewport="true"
    android:background="@color/bg4"
    android:id="@+id/scrollView"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:background="@drawable/gradient_activiti"
        android:id="@+id/relat_appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <RelativeLayout
            android:layout_marginTop="40dp"
            android:id="@+id/loodloh"
            android:layout_marginBottom="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_centerHorizontal="true"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="5dp"
                    android:fontFamily="@font/cairobold"
                    android:text="غرفة جي كرتون"
                    android:textColor="@color/white"
                    android:textSize="23dp"
                    android:textStyle="bold" />


            </LinearLayout>



        </RelativeLayout>



    </LinearLayout>

    <LinearLayout
        android:layout_below="@+id/relat_appbar"
        android:layout_above="@+id/gbtnns"
        android:visibility="visible"
        android:orientation="vertical"
        android:id="@+id/allview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <GridView
            android:id="@+id/cast_rv"
            android:layout_marginTop="20dp"
            android:orientation="horizontal"
            android:numColumns="3"
            tools:listitem="@layout/room_users_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>



    </LinearLayout>

    <RelativeLayout
        android:layout_marginBottom="10dp"
        android:id="@id/gbtnns"
        android:layout_above="@+id/navigation_bar"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="12dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_alignParentStart="true"
            android:id="@+id/gotocomments"
            android:layout_width="wrap_content"
            android:layout_height="41dp"
            android:background="@drawable/btnflwolbg_copy"
            android:foreground="@drawable/click_animation_round">


            <LinearLayout
                android:gravity="center"
                android:layout_centerInParent="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_marginEnd="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/arabic_kufi"
                    android:text="مغادرة"
                    android:layout_marginStart="10dp"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:textSize="12dp" />


            </LinearLayout>

        </RelativeLayout>
        <LinearLayout
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:id="@+id/addratebtn"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">



            <RelativeLayout
                android:layout_weight="1"
                android:id="@+id/gotosignin"
                android:layout_width="wrap_content"
                android:layout_height="41dp"
                android:background="@drawable/btnflwolbg_copy"
                android:foreground="@drawable/click_animation_round"
                >

                <LinearLayout
                    android:gravity="center"
                    android:layout_centerInParent="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/arabic_kufi"
                        android:text="أدخل وشاهد معهم الأن"
                        android:layout_marginStart="5dp"
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        android:textSize="12dp" />


                </LinearLayout>

            </RelativeLayout>





        </LinearLayout>




    </RelativeLayout>

    <ImageView
        android:id="@+id/navigation_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/bg4"/>



</RelativeLayout>




